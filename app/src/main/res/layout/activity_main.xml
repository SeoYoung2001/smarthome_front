<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:background="@color/LightYellow"
    android:paddingStart="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingEnd="0dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"

        android:background="@drawable/top_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/baseline_account_circle_24" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:text="SMARTHOME"
                android:textColor="@color/black"

                android:textSize="30sp"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/wifiBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="left"
                android:background="#00ff0000"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_toc_black_24dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="130dp"
                android:textColor="@color/white"
                android:text="목표 온도: 27°C"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/MainTemp_txt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@drawable/round_corner2"
                android:textColor="@color/white"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:text="온도"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/MainHud_txt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@drawable/round_corner2"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="습도"
                android:textSize="25dp"
                android:textStyle="bold"/>




        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:backgroundTint="@color/LightGrey"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/rounded_corner">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="48dp"
                android:src="@drawable/baseline_device_thermostat_black_24dp" />

            <Button
                android:id="@+id/Temp_Btn"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:layout_marginLeft="35dp"
                android:text="TEMP"
                android:textSize="18dp"
                android:textStyle="bold">

            </Button>


        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/LightGrey"
            android:orientation="vertical">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/baseline_sensor_door_black_24dp" />

            <Button
                android:id="@+id/Door_Btn"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_marginLeft="35dp"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Door"
                android:textSize="18dp"
                android:textStyle="bold">

            </Button>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:backgroundTint="@color/LightGrey"
            android:background="@drawable/rounded_corner">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="48dp"
                android:src="@drawable/baseline_light_black_24dp"/>

            <Button
                android:id="@+id/Light_Btn"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:text="Light"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:backgroundTint="@color/LightGrey"
            android:background="@drawable/rounded_corner">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="48dp"
                android:src="@drawable/baseline_sensors_black_24dp"/>

            <Button
                android:id="@+id/Sensor_Btn"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:layout_marginLeft="35dp"
                android:text="Sensor"
                android:textSize="18dp"
                android:textStyle="bold">

            </Button>


        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:backgroundTint="@color/LightGrey"
            android:background="@drawable/rounded_corner">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/baseline_emergency_recording_black_24dp"/>

            <Button
                android:id="@+id/Record_Btn"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:text="Record"
                android:textSize="18dp"
                android:textStyle="bold">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:backgroundTint="@color/LightGrey"
            android:background="@drawable/rounded_corner">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/baseline_rectangle_black_24dp"/>

            <Button
                android:id="@+id/Lcd_Btn"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:text="LCD"
                android:textSize="18dp"
                android:textStyle="bold">

            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>